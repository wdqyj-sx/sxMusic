/* pages/login/login.wxss */
page {
  background-color: #f0f1f3;
}
.logon-container {
  width: 100%;
  height: 100%;
}
.login-title {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100rpx;
  margin-top: 50rpx;
  
}
.login-title text {
 padding: 15rpx 25rpx;
  border: 1px solid #30b4ff;
  font-size: 36rpx;
  color: #555;
}
.login-form {
  display: flex;
  margin-top: 50rpx;
  width: 100%;
  height: 400rpx;
  background-color: #fff;
}
.login-form .form-item {
    flex-shrink: 0;
    width: 100%;
    display: flex;
    margin-bottom: 10rpx;
}
.form-item label {
  display: block;
  
  border-right: 1px solid #999;
}
.form-item input {
  margin-left: 15rpx;
  padding: 10rpx 15rpx;
  
}