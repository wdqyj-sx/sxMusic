/* pages/recommendSong/recommendSong.wxss */
.header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.header image {
  width: 100%;
  height: 100%;
}
.header .data {
  position: absolute;
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  text-align: center;
  top: 50%;
  left: 50%;
  margin-left: -150rpx;
  margin-top: -50rpx;
}
.data .day {
  font-size: 38rpx;
}
.container {
  position: relative;
  top: -20rpx;
  border-radius: 30rpx;
  padding: 0 20rpx;
  background-color: #fff;
}
.song-info {
  height: 80rpx;
  line-height: 80rpx;
}
.song-info text:last-child {
  float: right; 
}
.song-content {
  height: calc(100vh - 380rpx);
}
.song-content .song-item {
  position: relative;
  display: flex;
  margin-bottom: 20rpx;
}
.song-item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.song-item .music-info {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  flex: 1;
}
.music-info text {
  height: 40rpx;
  line-height: 40rpx;
  max-width: 500rpx;
  font-size: 24rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.song-item .iconfont{
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}