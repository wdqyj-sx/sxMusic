/* pages/video/video.wxss */
.header {
  display: flex;
  padding: 10rpx;
  align-items: center;
}
.header image {
  width: 60rpx;
  height: 60rpx;
}
.header .search {
  flex: 1;
  text-align: center;
  border: 1px solid #eee;
  margin: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #d43c33;

}
.nav-scroll {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.nav-scroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.navItem .nav-content {
  box-sizing: border-box;
  height: 60rpx;
}
.navItem .active {
  border-bottom: 1rpx solid #d43c33;
}