/* pages/video/video.wxss */
.header {
  display: flex;
  padding: 10rpx;
  align-items: center;
}
.header image {
  width: 60rpx;
  height: 60rpx;
}
.header .search {
  flex: 1;
  text-align: center;
  border: 1px solid #eee;
  margin: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #d43c33;

}
.nav-scroll {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.nav-scroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.navItem .nav-content {
  box-sizing: border-box;
  height: 60rpx;
}
.navItem .active {
  border-bottom: 1rpx solid #d43c33;
}
.video-scroll {
  margin-top: 10rpx;
  height: calc(100vh - 100rpx);
}
.video-item {
  padding: 0 3%;
}
.video-item .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.video-item .content {
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  white-space: nowrap;
  max-width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.footer .nackName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.footer .comments-praised{
  float: right;
}

.comments-praised .btn{
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}
.comments-praised .btn:after {
  border: none;
}
.comments-praised .item {
  margin-left: 50rpx;
  position: relative;
}
.comments-praised .item .count {
  position: absolute;
  font-size: 20rpx;
  margin-top: -20rpx;
}