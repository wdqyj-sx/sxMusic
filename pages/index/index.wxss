/* pages/index/index.wxss */
.indexContainer {
  width: 100%;
  height: 300rpx;
}
.banner image {
  width: 100%;
  height: 100%;
}
.navContainer {
  display: flex;
}
.navItem {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  background-color: rgb(240, 19, 19) ;
  line-height: 100rpx;
  color:#fff;
  margin: 20rpx 0;
  font-size: 50rpx;
}
.navItem text {
  font-size: 26rpx;
}